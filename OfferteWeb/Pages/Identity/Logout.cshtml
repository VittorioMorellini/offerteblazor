@page
@model OfferteWeb.Pages.Identity.LogoutModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@attribute [IgnoreAntiforgeryToken]
@{
    Layout = "_IdentityLayout";
}

<script>
    window.onload = function () {
        //console.log('sono in load function')
        document.forms[0].submit();
    }
</script>
<div style="display: flex; flex-direction:column; align-items: center; justify-content: center; height: 100vh">
    <h1 style="text-align: center">Logout is in progress ...</h1>
    <div style="display: flex; justify-content: center; align-items: center">
        <div class="row">
            <div class="col-md-12">
                <section>
                    <form id="account" method="post" Model="LogoutModel">
                        <div style="text-align: center">
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Complete Logout</button>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>
