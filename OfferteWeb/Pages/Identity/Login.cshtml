@page
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity 
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model OfferteWeb.Pages.Identity.LoginModel
@attribute [AllowAnonymous]
<script>
    window.onload = function () {
        //console.log('sono in load login function')
        document.getElementById('loginName').focus();
    }
</script>

<div style="display: flex; flex-direction:column; align-items: center; justify-content: center; height: 100vh">
    <h1 style="text-align: center">Techboard group</h1>
    <div style="display: flex; justify-content: center; align-items: center">
        <div class="row">
            <div class="col-md-12">
                <section>
                    <form id="account" method="post">
                        <div style="display: flex; align-items: center; justify-content: center">
                            <img src="/images/logo.png" style="max-width: 420px;" />
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating m-lg-3">
                            <input asp-for="Input.Username" id="loginName" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Username" class="form-label"></label>
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>
                        <div>
                            <br />
                        </div>
                        <div class="form-floating m-lg-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" type="password" />
                            <label asp-for="Input.Password" class="form-label"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <hr/>
                        <div style="text-align: center">
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                        </div>
                        @if (!ModelState.IsValid) {
                            <div style="text-align: center">
                                <div class="col-md-12">
                                    <div class="alert alert-danger" role="alert">
                                        <label class="form-label">@ModelState["LoginError"].Errors.Last().ErrorMessage</label>
                                    </div>
                                </div>
                            </div>
                        }
